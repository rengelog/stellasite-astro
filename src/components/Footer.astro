---
import { site } from "@/config";
import { u } from "unist-builder";

import {t} from '@/i18n/utils'

const baseURL = import.meta.env.PUBLIC_BASE_URL || "";
const currentYear = new Date().getFullYear();
---

<footer class="footer-container">
  <div class="site-footer">
    <div class="container">
      <div class="row">
        <div class="col-6">
          <div class="footer-widget">
            <h2>{t('footer.abouttheblog')}</h2>
            <p>
              {t('footer.note')}
            </p>
          </div>
        </div>
        <div class="col-3">
          <div class="footer-widget">
            <h2>{t('footer.link')}</h2>
            <ul>
              <li><a href={`${baseURL}/`}>- {t('footer.home')}</a></li>
              <li><a href={`${baseURL}/blog/`}>- {t('footer.blog')}</a></li>
            </ul>
          </div>
        </div>
        <div class="col-3">
          <div class="footer-widget">
            <h2>{t('footer.contact')}</h2>
            <ul>
              <li><a href="mailto:info@example.com">- {t('footer.contactusbyemail')}</a></li>
              <ul class="social-links">
                <li>
                  <a href="https://twitter.com/yourhandle" target="_blank" rel="noopener noreferrer">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" transform="rotate(0 0 0)">
                      <path d="M17.7512 2.96094H20.818L14.1179 10.6187L22 21.0391H15.8284L10.9946 14.7191L5.4636 21.0391H2.39492L9.56132 12.8483L2 2.96094H8.32824L12.6976 8.73762L17.7512 2.96094ZM16.6748 19.2035H18.3742L7.40492 4.70014H5.58132L16.6748 19.2035Z" fill="#fff"/>
                    </svg>
                  </a>
                </li>
                <li>
                  <a href="https://www.facebook.com/yourpage" target="_blank" rel="noopener noreferrer">
                    <svg width="24" height="24" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg" transform="rotate(0 0 0)">
